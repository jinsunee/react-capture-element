{
  "compilerOptions": {
    "strict": true,
    "target": "es2015",
    "esModuleInterop": true,
    "module": "es2015",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "allowJs": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "sourceMap": true,
    "declaration": true,
    "baseUrl": ".",
    "outDir": "./dist"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
